
<section class="landing-home" id="landing-home">
  

  <div class="landing-content">
      <div class="landing-title">
        <h3>Enjoy your shopping experience</h3>
        <h4>This is a mobile App. 
        <br> 
        Download Scan&Go to avoid queues in any shop!
        </h4>
      </div>
      <div class="landing-links">
        <div class="landing-app-container">
          <button class="btn btn-outline-dark btn-icon-text"> 
            <i class="fab fa-apple btn-icon-prepend mdi-36px"></i>
            <span class="d-inline-block text-left"><small class="font-weight-light d-block">Available on the</small> App Store </span>
          </button> 
          <button class="btn btn-outline-dark btn-icon-text"> 
            <i class="fab fa-google-play btn-icon-prepend mdi-36px"></i>
            <span class="d-inline-block text-left"> <small class="font-weight-light d-block">Available on the</small> Google Play </span>
          </button>  
        </div>
        <div class="landing-qr">
          <%= image_tag "frame.png" %>
        </div>
      </div>

        
  </div>
  
  <div class="landing-image">
    <%= image_tag "phone-landing1.jpg" %>
  </div>

</section>  
  
  