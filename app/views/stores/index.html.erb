<div class="input-group input-group-sm mb-3">
  <span class="input-group-text" id="inputGroup-sizing-sm">Storefinder</span>
    <input type="search" id="store-search" placeholder="Look for a store in ..." />
</div>

<div id="geocoder"></div>
<pre id="result"></pre>

<div class="title-check-in-now">
  <h2>Check in now!</h2>
</div>

<div class="store-card-container">

  <% @stores.each do |store| %>
  <div class="store-card-main">
    <p class="store-title-card"><%= store.name %></p><a href=""><i class="fas fa-info-circle"></i></a>
    <p class="store-address-card"><%= store.address %></p>
    <p class="store-distance-card"><%= %>m away</p>
  </div>
  <% end%>
</div>





