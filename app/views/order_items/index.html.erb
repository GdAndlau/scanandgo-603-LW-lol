<div class="order-index-container">

  <%= render 'shared/navbar' %>
    <div class="secondary-title title-card-find title-text-color">
      <h2>My Shopping Cart</h2>
    </div>
    <div>
      <%= render "shared/order_items" %>
    </div>
    <div class="payment sticky">
      <div class="total-price">
        <h2>
          Total price:
          <h3>
          EUR <%= @total_price %>
          </h3>
        </h2>
      </div>
        
      <a href="/" class="btn-SignUp btn-block btn-pay">Confirm payment</a>
      <div class="continue-shopping">
        <%= link_to "Continue Shopping", "pages"  %>
      </div>
    </div>
      
  <%= render 'shared/footer' %>
  
</div>

