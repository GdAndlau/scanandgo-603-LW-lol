  <%= render 'shared/navbar' %>
  <div class="background-image">
    <div class="form-container">
      <h2 class="secondary-title">Update profile</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        placeholder: "First Name",
                        label: false, input_html: { class: "input-field" }  %>
            <%= f.input :last_name,
                        required: true,
                        autofocus: true,
                        placeholder: "Last Name",
                        label: false, input_html: { class: "input-field" }  %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        placeholder: "Email",
                        label: false, input_html: { class: "input-field" }  %>
            <%= f.input :card_number,
                        required: true,
                        autofocus: true,
                        placeholder: "Credit card details",
                        label: false, input_html: { class: "input-field" }  %>
           <%= f.input :password,
                        required: true,
                        # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        placeholder: "Password",
                        label: false, input_html: { class: "input-field" }  %>
            <%= f.input :password_confirmation,
                        required: true,
                        placeholder: "Confirm Password",
                        label: false, input_html: { class: "input-field" }  %>

            <%= devise_error_messages! %>
         <%= f.button :submit, "Update", class: "btn-SignUp btn-block" %>

      <% end %>
  <div class="options">
    <p><%= button_to "Cancel my account", root_path, data: { confirm: "Are you sure?" }, method: :delete, class:"option-out" %></p>

    <p><%= button_to "Log out", destroy_user_session_path, method: :delete, class:"option-out"%></p>
  </div>




    </div>
  </div>
  <%= render 'shared/footer' %>
