
<div class="container signup-main-container">
  <div class="yellow-circle-decoration"></div>
  <div class="lighter-violet-circle-decoration"></div>
  <div class="darker-violet-circle-decoration"></div>
  <div class="form-container">
    <div class="home-text-container">
      <i class="fas fa-user-circle" ></i>
      <h2 class="sign-up-title">SIGN UP</h2>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  placeholder: "First Name",
                  label: false, input_html: { class: "input-field" } %>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  placeholder: "Last Name",
                  label: false, input_html: { class: "input-field" } %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "Email",
                  label: false, input_html: { class: "input-field" } %>
      <%= f.input :card_number,
                  required: true,
                  autofocus: true,
                  placeholder: "Credit card details",
                  label: false, input_html: { class: "input-field" } %>
      <%= f.input :password,
                  required: true,
                  # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  placeholder: "Password",
                  label: false, input_html: { class: "input-field" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: "Confirm Password",
                  label: false, input_html: { class: "input-field" } %>
      <%= f.button :submit, "Sign Up", class: "btn-SignUp btn-block" %>
    <% end %>
    <div class="go-back">
      <%= link_to "Go back", root_path %>
    </div>
  </div>
</div>


