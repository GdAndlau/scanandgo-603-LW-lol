
<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%#image_tag @order.product.photo_url, width: '100%' %></div>

  </div>
</div>




<div class="oder-confirmation">
  <div class="final-pic">
    <i class="uil uil-check-circle"></i>
  </div>
  <h1 class="order-completed">Your basket</h1>
  <h3 class="order-number">Order number is #345 654 987</h3>

    <div class="order-details">
      <div class="row"><p><em>Ordered Items</em></p><b><p id ="plus-sign">+</b></p></div>
      <div class="row"><p>Order</p><p><%= @total_price %>EUR, including VAT</p></div>
    </div>

<button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>

  </div>
</div>
<%= render 'shared/footer' %>

